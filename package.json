{
  "name": "graphiql-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/monaco-graphql-webpack"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --passWithNoTests",
      "pnpm cspell --gitignore"
    ],
    "*.{md,html,json,css}": [
      "prettier --write",
      "pnpm cspell --gitignore"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "npm": "please_use_pnpm_instead"
  },
  "scripts": {
    "build": "pnpm build:clean && pnpm build-clean && pnpm run tsc && pnpm run --recursive build",
    "build-bundles": "wsrun -p -m -s build-bundles",
    "build-bundles-clean": "rimraf '{packages,examples,plugins}/**/{bundle,cdn,webpack}' && pnpm run build-bundles-clean",
    "build-clean": "wsrun -m build-clean",
    "build-demo": "wsrun -m -s build-demo",
    "build-docs": "rimraf 'packages/graphiql/typedoc' && typedoc 'packages'",
    "build:clean": "pnpm tsc --clean && pnpm tsc --clean resources/tsconfig.graphiql.json",
    "build:cm6-graphql": "pnpm run build --filter cm6-graphql",
    "build:graphiql": "pnpm tsc resources/tsconfig.graphiql.json",
    "build:graphiql-plugin-explorer": "pnpm run build --filter @graphiql/plugin-explorer",
    "build:graphiql-plugin-code-exporter": "pnpm run build --filter @graphiql/plugin-code-exporter",
    "build:graphiql-react": "pnpm run build --filter @graphiql/react",
    "build:packages": "pnpm tsc",
    "build:watch": "pnpm tsc --watch",
    "watch": "pnpm build:watch",
    "watch-vscode": "concurrently --raw \"pnpm tsc && pnpm build:watch\" \"pnpm run --filter vscode-graphql run compile --watch\"",
    "watch-vscode-exec": "pnpm build:watch",
    "check": "pnpm tsc --noEmit",
    "cypress-open": "pnpm run --filter graphiql cypress-open",
    "dev-graphiql": "pnpm run --filter graphiql dev",
    "e2e": "pnpm run e2e:build && pnpm run --filter graphiql e2e",
    "e2e:build": "pnpm build && pnpm run --filter graphiql run build-bundles-min",
    "eslint": "eslint --max-warnings=0 --cache --ext=ts,js,jsx,tsx .",
    "format": "pnpm eslint --fix && pnpm pretty",
    "jest": "jest",
    "license-check": "jsgl --local ./",
    "lint": "pnpm eslint && pnpm lint-check && pnpm pretty-check && pnpm lint-cspell",
    "lint-check": "eslint-config-prettier .eslintrc.js",
    "lint-cspell": "cspell --gitignore '**/*.{js,ts,jsx,tsx,md,html,json,css}'",
    "lint-fix": "pnpm eslint --fix",
    "postbuild": "pnpm run --recursive codemirror-graphql run postbuild",
    "prebuild-bundles": "pnpm build-bundles-clean",
    "prepublishOnly": "./scripts/prepublish.sh",
    "pretty": "node scripts/pretty.js",
    "pretty-check": "node scripts/pretty.js --check",
    "release": "pnpm build && pnpm build-bundles && (wsrun release --exclude-missing --serial --recursive --changedSince main || true) && pnpm changeset publish",
    "release:canary": "(node scripts/canary-release.js && pnpm build && pnpm build-bundles && pnpm changeset publish --tag canary) || echo Skipping Canary...",
    "repo:lint": "manypkg check",
    "repo:fix": "manypkg fix",
    "repo:resolve": "node scripts/set-resolution.js",
    "start-graphiql": "pnpm run --filter graphiql dev",
    "start-monaco": "pnpm run --filter example-monaco-graphql-webpack start",
    "t": "pnpm run testonly",
    "test": "pnpm jest --noStackTrace",
    "test:coverage": "pnpm jest --coverage",
    "test:watch": "pnpm jest --watch",
    "testonly": "jest && pnpm run --recursive codemirror-graphql run test",
    "tsc": "tsc --build"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@manypkg/get-packages": "^1.1.3",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@testing-library/jest-dom": "5.16.5",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/codemirror": "^0.0.90",
    "@types/express": "^4.17.11",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^26.0.22",
    "@types/node": "^16.18.4",
    "@types/prettier": "^2.7.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.17",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "aws-serverless-express": "^3.4.0",
    "babel-jest": "^29.4.3",
    "concurrently": "^7.0.0",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "cspell": "^5.15.2",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "^0.17.0",
    "eslint-plugin-unicorn": "^45.0.1",
    "execa": "^6.0.0",
    "express": "^4.17.3",
    "fetch-mock": "6.5.2",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "js-green-licenses": "3.0.0",
    "lint-staged": "^10.1.2",
    "mkdirp": "^1.0.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "typedoc": "^0.19.2",
    "typescript": "^4.6.3",
    "wsrun": "^5.2.4"
  },
  "resolutions": {
    "graphql-config": "4.3.0"
  }
}
