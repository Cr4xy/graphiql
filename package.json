{
  "name": "graphiql-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --passWithNoTests",
      "pnpm cspell --gitignore"
    ],
    "*.{md,html,json,css}": [
      "prettier --write",
      "pnpm cspell --gitignore"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "npm": "please_use_pnpm_instead"
  },
  "packageManager": "pnpm@8.6.5",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --concurrency 20",
    "build:cm6-graphql": "pnpm run --filter cm6-graphql build",
    "build-docs": "rimraf packages/graphiql/typedoc && typedoc",
    "watch-vscode": "pnpm --filter vscode-graphql run compile",
    "watch-vscode-exec": "pnpm --filter vscode-graphql-execution run compile",
    "cypress-open": "pnpm --filter graphiql run cypress-open",
    "dev-graphiql": "pnpm --filter graphiql run dev",
    "e2e": "pnpm run build && pnpm --filter graphiql run e2e",
    "eslint": "NODE_OPTIONS=--max-old-space-size=4096 eslint --max-warnings=0 --ignore-path .gitignore --cache .",
    "format": "pnpm eslint --fix && pnpm pretty",
    "jest": "jest --testPathIgnorePatterns cm6-graphql",
    "license-check": "jsgl --local ./",
    "lint": "pnpm eslint && pnpm lint-check && pnpm pretty-check && pnpm lint-cspell",
    "lint-check": "eslint-config-prettier .eslintrc.js",
    "lint-cspell": "cspell --unique",
    "lint-fix": "pnpm eslint --fix",
    "postbuild": "pnpm --filter codemirror-graphql run postbuild",
    "prepublishOnly": "./scripts/prepublish.sh",
    "pretty": "pnpm pretty-check --write",
    "pretty-check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "ci:version": "pnpm changeset version && pnpm build && pnpm format",
    "release": "pnpm build && (wsrun release --exclude-missing --serial --recursive --changedSince main -- || true) && pnpm changeset publish",
    "release:canary": "(node scripts/canary-release.js && pnpm build && pnpm changeset publish --tag canary) || echo Skipping Canary...",
    "repo:lint": "manypkg check",
    "repo:fix": "manypkg fix",
    "repo:resolve": "node scripts/set-resolution.js",
    "start-graphiql": "pnpm --filter graphiql run dev",
    "start-monaco": "pnpm --filter example-monaco-graphql-webpack run start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@arthurgeron/eslint-plugin-react-usememo": "^1.1.4",
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@manypkg/get-packages": "^1.1.3",
    "@shopify/eslint-plugin": "^42.1.0",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
    "@testing-library/jest-dom": "5.16.5",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/codemirror": "^0.0.90",
    "@types/express": "^4.17.11",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^16.18.4",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "6.0.0-alpha.159",
    "@typescript-eslint/parser": "6.0.0-alpha.159",
    "aws-serverless-express": "^3.4.0",
    "babel-jest": "^29.4.3",
    "concurrently": "^7.0.0",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "cspell": "^5.15.2",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-mdx": "^2.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonar": "^0.12.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "execa": "^6.0.0",
    "express": "^4.17.3",
    "fetch-mock": "6.5.2",
    "husky": "^4.2.3",
    "jest": "^27.5.1",
    "js-green-licenses": "3.0.0",
    "lint-staged": "^10.1.2",
    "mkdirp": "^1.0.4",
    "prettier": "3.0.0-alpha.12",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "typedoc": "^0.24.8",
    "typescript": "^4.6.3",
    "turbo": "^1.10.6",
    "vitest": "^0.32.2",
    "wsrun": "^5.2.4"
  }
}
